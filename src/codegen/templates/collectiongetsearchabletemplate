    def get(self, name=None, %(headers_method_params_str)sid=None):
%(docs)s
        url = '%(url)s'

        if id:
            try :
                return %(resource_type)s(
                    self.__getProxy().get(
                        url=UrlHelper.append(url, id),
                        headers=%(headers_map_params_str)s
                    ),
                    self.context
                )
            except RequestError, err:
                if err.status and err.status == 404:
                    return None
                raise err
        elif name:
            result = self.__getProxy().get(
                url=SearchHelper.appendQuery(url, {'search:query':'name='+name}),
                headers=%(headers_map_params_str)s
            ).get_%(resource_name_lc)s()

            return %(resource_type)s(
                FilterHelper.getItem(result),
                self.context
            )
        else:
            raise MissingParametersError(['id', 'name'])

